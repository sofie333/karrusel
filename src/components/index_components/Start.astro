<article>
  <img src="img/index_img.webp" alt="..." />
  <div class="knapper">
    <a href="tickets">
      <button> TICKETS </button>
    </a>
    <a href="map">
      <button> MAP </button>
    </a>
    <a href="values">
      <button> VALUES </button>
    </a>
  </div>
</article>

<style>
  article img {
    width: 100%;
  }

  button {
    color: var(--hvid);
    border: 4px solid var(--pink);
    border-radius: 4px;
    background-color: rgba(240, 248, 255, 0);
    font-size: 20px;
    font-family: pt;
    cursor: pointer;
    z-index: 1;
    margin: auto;
    padding: 15px 20px;
  }

  @media (min-width: 800px) {
    html {
      background-color: var(--sort);
    }

    button {
      color: var(--hvid);
      border: 4px solid var(--pink);
      border-radius: 4px;
      width: 180px;
      height: 80px;
      background-color: rgba(240, 248, 255, 0);
      font-size: 22px;
      font-family: pt;
      cursor: pointer;
      z-index: 1;
      margin: auto;
      margin-top: 600px;
    }

    button:hover {
      background-color: var(--pink);
      transition: background-color 0.5s ease;
    }

    .knapper a {
      text-decoration: none;
    }
    a {
      display: flex;
      flex-direction: column;
      z-index: 1;
      top: 15px;
      max-width: 1200px;
      margin: auto;
      text-decoration: none;
    }

    article img {
      display: block;
      width: 1200px;
      height: 800px;
      z-index: -1;
      position: absolute;
      margin-left: 8%;
      margin-right: 5%;
    }

    .knapper {
      display: flex;
      flex-direction: row;
      max-width: 1000px;
      margin: auto;
    }
  }
</style>
