---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 2rem;
    background-color: var(--sort);
    border: 4px solid var(--pink);
    border-radius: 10px;
    color: var(--hvid);
    position: absolute;
    transform: translateX(-50%);
    font-family: pt;
  }
  button:hover {
    background-color: var(--pink);
    color: var(--hvid);
  }

  @media (max-width: 850px) {
    .small {
      font-size: 0.8rem;
      padding: 6px 20px;
    }

    .large {
      font-size: 1rem;
      padding: 6px 20px;
    }

    .pos_1 {
      left: 70%;
      bottom: 47.6%;
    }

    .pos_2 {
      left: 51%;
      bottom: -1%;
    }

    .pos_3 {
      left: 51%;
      bottom: -20%;
    }

    .pos_4 {
      left: 51%;
      bottom: -39%;
    }
  }

  @media (min-width: 851px) {
    .small {
      font-size: 1rem;
      padding: 10px 24px;
    }

    .large {
      font-size: 1.6rem;
      padding: 20px 24px;
    }

    .pos_1 {
      left: 64%;
      bottom: -5%;
    }

    .pos_2 {
      left: 73.4%;
      bottom: -41%;
    }

    .pos_3 {
      left: 73.4%;
      bottom: -63%;
    }

    .pos_4 {
      left: 73.4%;
      bottom: -85%;
    }
  }
</style>
